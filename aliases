# new commands
alias groupls='cat /etc/group | cut -d: -f1 | sort'
alias rezsh='source ~/.zshrc'
alias svim='sudo -E vim'
alias userls='cat /etc/passwd | cut -d: -f1 | sort'

# cd
alias .='cd ../'
alias ..='cd ../../'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../../'
alias ......='cd ../../../../../../'

# ls
if [[ "$(uname)" = "Darwin" ]]; then
    alias ls='ls -G'
else
    alias ls='ls --color'
fi

alias la='ls -Ah'
alias ll='ls -lh'
alias lr='ls -tRh'
alias lt='ls -lth'
alias lal='la -l'
alias lla='lal'

# other
alias gw='./gradlew'
alias jn='jupyter notebook'
alias tt='taskwarrior-tui'

